<phpunit bootstrap="../vendor/autoload.php">
    <testsuites>
        <testsuite name="phpunit-array-asserts">
            <directory>./Unit</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">../src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="clover.xml"/>
    </logging>
</phpunit>
